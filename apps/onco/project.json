{
  "name": "onco",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/onco/src",
  "tags": ["scope:onco-app"],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/onco",
        "browser": "apps/onco/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/onco/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/onco/public"
          },
          {
            "glob": "**/*",
            "input": "libs/mirza/assets/src",
            "output": "assets"
          },
          {
            "glob": "**/*",
            "input": "libs/shared/assets/src",
            "output": "assets"
          },
          {
            "glob": "**/*",
            "input": "libs/shared/services/splash-screen/src/lib/assets",
            "output": "assets"
          }
        ],
        "styles": ["libs/onco/styles/src/themes.scss", "libs/shared/styles/src/module.css", "apps/onco/src/styles.css"],
        "stylePreprocessorOptions": {
          "includePaths": ["libs/shared/styles/src"]
        },
        "scripts": [],
        "allowedCommonJsDependencies": ["flat"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2mb",
              "maximumError": "3mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "20kb",
              "maximumError": "40kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/onco/src/environments/environment.ts",
              "with": "apps/onco/src/environments/environment.development.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "production",
      "serviceWorker": "apps/onco/ngsw-config.json"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "options": {
        "port": 5400
      },
      "configurations": {
        "production": {
          "buildTarget": "onco:build:production"
        },
        "development": {
          "buildTarget": "onco:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "onco:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/onco/jest.config.ts",
        "tsConfig": "apps/onco/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "onco:build",
        "port": 5400,
        "staticFilePath": "dist/apps/onco/browser",
        "spa": true
      }
    }
  }
}
